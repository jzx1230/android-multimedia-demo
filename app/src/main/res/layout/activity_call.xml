<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".artvc.CallActivity">

    <FrameLayout
        android:id="@+id/main_render"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFE0"/>

    <FrameLayout
        android:id="@+id/small_render_right"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFE0"/>

    <FrameLayout
        android:id="@+id/small_render_left"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFE0"/>

    <TextView
        android:id="@+id/roomId"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/peer_id"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rtoken"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_below="@+id/roomId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/button_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/switch_camera_btn"
            android:textSize="10sp"
            android:text="camera"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/mute_mic_btn"
            android:textSize="10sp"
            android:text="mic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_exit"
            android:text="exit"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/change_resolution_btn"
            android:textSize="10sp"
            android:text="resolutionUp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout_bottom_2"
        android:layout_above="@+id/button_layout_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/unpublish_btn"
            android:textSize="10sp"
            android:text="unpublish"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/publish_btn"
            android:textSize="10sp"
            android:text="publish"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/subscribe_btn"
            android:textSize="10sp"
            android:text="subscribe"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/unsubscribe_btn"
            android:textSize="10sp"
            android:text="unsubscribe"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout_bottom_3"
        android:layout_above="@+id/button_layout_bottom_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/invitee_uid"
            android:textSize="10sp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:hint="请输入被邀请人的uid"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/invite_btn"
            android:textSize="10sp"
            android:text="invite"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
